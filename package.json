{
  "name": "seeds",
  "version": "0.4.0",
  "private": true,
  "description": "SEEDS: Sproutâ€™s Extremely Excellent Design System",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sproutsocial/seeds.git"
  },
  "author": "Sprout Social",
  "scripts": {
    "format:prettier": "prettier-eslint --write --eslint-ignore --print-width=120 --single-quote --no-bracket-spacing  \"./packages/**/*.js\" gulpfile.js",
    "create-package": "yo ./packages/generator-package",
    "precommit": "lint-staged",
    "build": "lerna run build",
    "docs": "lerna run build && gulp",
    "docs-publish": "lerna run --scope !seeds-docs build && cd packages/seeds-docs && yarn build && cd - && gh-pages -d packages/seeds-docs/public",
    "docs-serve": "lerna run --scope !seeds-docs build && cd packages/seeds-docs && yarn serve",
    "postinstall": "lerna bootstrap"
  },
  "lint-staged": {
    "*.js": [
      "format:prettier"
    ]
  },
  "devDependencies": {
    "@sproutsocial/seeds-utils": "^0.1.2",
    "ase-util": "^1.0.1",
    "ase-utils": "^0.1.1",
    "del": "^2.2.2",
    "gh-pages": "^1.0.0",
    "globby": "^6.1.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-insert": "^0.5.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^3.1.0",
    "gulp-util": "^3.0.8",
    "husky": "^0.14.3",
    "js-yaml": "^3.8.2",
    "lerna": "^2.2.0",
    "lint-staged": "^4.0.3",
    "lodash.camelcase": "^4.3.0",
    "lodash.snakecase": "^4.1.1",
    "lodash.upperfirst": "^4.3.1",
    "make-dir": "^1.0.0",
    "merge-stream": "^1.0.1",
    "mround": "^1.0.0",
    "pascal-case": "^2.0.0",
    "prettier-eslint": "^6.4.2",
    "prettier-eslint-cli": "^4.1.1",
    "theo": "^5.0.0",
    "tinycolor2": "^1.4.1",
    "yo": "^2.0.0"
  }
}
